<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ctadmin.myapplication.MainActivity"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/photo_image_view"
        android:layout_width="wrap_content"
        android:layout_height="224dp"
        android:scaleType="centerCrop"
        android:src="@drawable/yoga"
        android:layout_weight="15.98" />


        <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="guess the aasana"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#4689C8"
        android:textStyle="bold"
        android:layout_marginStart="66dp"
        android:layout_marginTop="18dp"
        android:layout_weight="0.09" />
        <RadioGroup
        android:layout_width="wrap_content"
        android:id="@+id/r"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
        android:text="suriyanamaskar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton2" />

        <RadioButton
        android:text="badmasana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton3" />

        <RadioButton
        android:text="svanasana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton4" />

        <RadioButton
        android:text="natarajasana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton5" />

        </RadioGroup>
    <ImageView
        android:id="@+id/photo_image_view2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/fish"
        android:layout_weight="5.27" />
        <TextView
            android:id="@+id/title_text_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="guess the fish"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#4689C8"
            android:textStyle="bold"
            android:layout_marginStart="66dp"
            android:layout_marginTop="18dp"
            android:layout_weight="0.09" />


        <RadioGroup
        android:layout_width="wrap_content"
        android:id="@+id/r1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
        android:text="cat fish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton6" />

        <RadioButton
            android:text="bull fish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton7" />

        <RadioButton
            android:text="cow fish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton8" />
        <RadioButton
            android:text="pig fish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton9" />
         </RadioGroup>
        <ImageView
            android:id="@+id/photo_image_view3"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pitbull"
            android:layout_weight="5.27" />
           <TextView
            android:id="@+id/title_text_view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="guess the dog"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#4689C8"
            android:textStyle="bold"
            android:layout_marginStart="66dp"
            android:layout_marginTop="18dp"
            android:layout_weight="0.09" />
            <RadioGroup
            android:layout_width="wrap_content"
            android:id="@+id/r2"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
            android:text="pitbull"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton10" />
            <RadioButton
            android:text="german shepard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton11" />
            <RadioButton
            android:text="pug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton12" />
            <RadioButton
            android:text="pomerian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton13" />

             </RadioGroup>

        <ImageView
                android:id="@+id/photo_image_view4"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fruit"/>
               <TextView
                android:id="@+id/title_text_view4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="guess the fruit"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#4689C8"
                android:textStyle="bold"
                android:layout_marginStart="66dp"
                android:layout_marginTop="18dp"
                android:layout_weight="0.09" />
                <CheckBox
            android:id="@+id/notify_me_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="banana"
            android:textAppearance="?android:textAppearanceMedium" />
            <CheckBox
            android:id="@+id/notify_me_checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="straberry"
            android:textAppearance="?android:textAppearanceMedium" />
            <CheckBox
            android:id="@+id/notify_me_checkbox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="apple"
            android:textAppearance="?android:textAppearanceMedium" />
            <CheckBox
            android:id="@+id/notify_me_checkbox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="orange"
            android:textAppearance="?android:textAppearanceMedium" />

        <ImageView
                android:id="@+id/photo_image_view5"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/stevejobs"
                android:layout_weight="5.27" />
            <TextView
                android:id="@+id/title_text_view5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="guess the person"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#4689C8"
                android:textStyle="bold"
                android:layout_marginStart="66dp"
                android:layout_marginTop="18dp"
                android:layout_weight="0.09" />
              <EditText
            android:id="@+id/album_description_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="apple"
            android:inputType="textMultiLine" />
             <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#4689C8 "
            android:textStyle="bold" />
        <TextView
            android:id="@+id/resultscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#4689C8 "
            android:textStyle="bold" />
        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit" />

    </LinearLayout>

    </ScrollView>
